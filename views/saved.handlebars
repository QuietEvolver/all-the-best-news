<div class = "modal hide">
    <div>
    <form action="/comment" method="POST">
        <textarea type="text" name="comment"></textarea>

        <button class="btn" type="submit">Submit Comment</button>
    </form>
</div>
</div>
<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <h1>Saved Articles</h1>
        <p>Your Saved Articles</p>
    </div>

    <ul>
    {{#each articles}}
    <li>
        <p>Headline: {{this.headline}}</p>
        <p>Summary: {{this.summary}}</p>
        <form action="/deleteArticles/{{this._id}}" method="GET">
        <button type="submit" class="waves-effect waves-light btn blue lighten-3 z-depth-4">Delete Article</button>
        </form>
        <button class=" btn view-comments">View Comments</button>
    </li>
    {{/each}}
</ul>

</div>
<div class="container-fluid article-container">
</div>

<footer class="footer">
    <div class="container">
        <p>New York Times Mongo Scraper</p>
    </div>
</footer>
